{
  "version": 2,
  "name": "vote-ucao-frontend",
  "builds": [
    {
      "src": "*.html",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/login",
      "destination": "/login.html"
    },
    {
      "source": "/register",
      "destination": "/register.html"
    },
    {
      "source": "/dashboard",
      "destination": "/dashboard.html"
    },
    {
      "source": "/election",
      "destination": "/election.html"
    },
    {
      "source": "/vote",
      "destination": "/vote.html"
    },
    {
      "source": "/results",
      "destination": "/results.html"
    },
    {
      "source": "/candidature",
      "destination": "/candidature.html"
    },
    {
      "source": "/user",
      "destination": "/user_index.html"
    },
    {
      "source": "/test",
      "destination": "/test.html"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
