{
  "version": 2,
  "name": "vote-ucao-frontend",
  "builds": [
    {
      "src": "src/**/*.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "^/$",
      "dest": "/src/index.html"
    },
    {
      "src": "^/admin$",
      "dest": "/src/admin/admin_home.html"
    },
    {
      "src": "^/admin/(.*)$",
      "dest": "/src/admin/$1.html"
    },
    {
      "src": "^/user$",
      "dest": "/src/user/login.html"
    },
    {
      "src": "^/user/(.*)$",
      "dest": "/src/user/$1.html"
    },
    {
      "src": ".*",
      "dest": "/404.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    },
    {
      "source": "/(.*)\\.js",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript"
        }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}