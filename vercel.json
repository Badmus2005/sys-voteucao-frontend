{
  "version": 2,
  "name": "vote-ucao-frontend",
  "builds": [
    {
      "src": "src/admin/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "src/user/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "src/*.html",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/",
      "destination": "/src/index.html"
    },
    {
      "source": "/admin",
      "destination": "/src/admin/admin_home.html"
    },
    {
      "source": "/admin/:page",
      "destination": "/src/admin/:page.html"
    },
    {
      "source": "/user",
      "destination": "/src/user/login.html"
    },
    {
      "source": "/user/:page",
      "destination": "/src/user/:page.html"
    },
    {
      "source": "/(.*)",
      "destination": "/404.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    },
    {
      "source": "/(.*).js",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript"
        }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}